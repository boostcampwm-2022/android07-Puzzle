<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar -->
    <style name="Style.Puzzle.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/all_toolbar_background</item>
        <item name="android:paddingTop">@dimen/toolbar_top_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_bottom_padding</item>
        <item name="android:paddingStart">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">?shapeAppearanceCornerLarge</item>
    </style>

    <style name="Style.Puzzle.PlayToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:background">@drawable/all_toolbar_background</item>
        <item name="android:paddingStart">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Puzzle.LargeComponent</item>
    </style>

    <style name="Style.Puzzle.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/all_search_view_background</item>
        <item name="searchIcon">@drawable/all_search_icon</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <!-- Button -->
    <style name="Style.Puzzle.Button.Inaddvideo" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/Theme.Puzzle.TextSmall</item>
    </style>

    <style name="Style.Puzzle.Button.Inplayvideo" parent="Widget.Material3.Button.IconButton">
        <item name="iconGravity">textStart</item>
        <item name="iconSize">40dp</item>
        <item name="iconTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Theme.Puzzle.TextSmall</item>
    </style>

    <!-- Dialog -->
    <style name="Style.Puzzle.Dialog" parent="">
        <item name="shapeAppearance">@style/ShapeAppearance.Puzzle.LargeComponent</item>
    </style>

    <style name="Style.Puzzle.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/secondary_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Puzzle.LargeComponent.Top</item>
        <item name="behavior_peekHeight">@dimen/bottomSheet_peekHeight</item>
    </style>

</resources>