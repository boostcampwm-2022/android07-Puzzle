<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Puzzle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/onPrimary_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/onSecondary_color</item>

        <!-- Disabled brand color. -->
        <item name="colorPrimaryContainer">@color/disabled_color</item>
        <item name="colorOnPrimaryContainer">@color/onDisabled_color</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Puzzle.BottomSheet</item>
        <item name="popupMenuBackground">@drawable/all_popup_background</item>
    </style>

    <style name="Theme.Puzzle.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Puzzle</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme.Puzzle.LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Puzzle.Dialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="colorSurface">@color/secondary_color</item>>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="alertDialogStyle">@style/ThemeOverlay.Puzzle.Dialog</item>
    </style>

</resources>